---
import {
  storyblokEditable, 
  renderRichText
} from "@storyblok/astro";
 
import { Icon } from "astro-icon/components";

interface Props {
  blok: ContactFormStoryblok;
} 
const { blok } = Astro.props;
const { 
  container ,
  content,
  surface = "", 
  padding_top = "pt-lg",
  padding_bottom= "pb-lg"
} = blok;
 

const renderedRichText = renderRichText(content);

 
---

<div {...storyblokEditable(blok)} class={`${surface} intersection`}>
  <div class={container ? "content-grid" : ""}>
    <div class={`${container} ${padding_top} ${padding_bottom} px-1` }>
<div set:html={renderedRichText} class={`richtext max-w-2xl text-balance pb-2`} />    
<a class="bg-primary p-2 rounded text-white" href="mailto:hello@dynage.technology">
  Contact Us 
  <Icon name="email" class="inline-block w-4 h-4 ml-1" />
</a>
</div>

  </div>
</div>
