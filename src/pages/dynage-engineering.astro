---
import Layout from '../layouts/default.astro'
const heroImage = "https://res.cloudinary.com/dk0pompea/image/upload/v1726645707/dynage/dynage-eng-hero_hzlpmm.png"

---

<Layout title="Welcome to Dynage Engineering.">
    <section class="mt-10 mx-auto px-10 mb-24 ">
        <h1 class="font-bold text-4xl capitalize">Empowering Your Vision with our Engineering prowess</h1>
        <div class="overflow-hidden w-full my-4 rounded">
            <img src={heroImage} alt="visionary">
        </div>
        <p class="-mt-28 text-white p-2">
            We are a team of engineers who are passionate about building Hardware Solutions that solves real-world problems.
        </p>
    </section>

</Layout>