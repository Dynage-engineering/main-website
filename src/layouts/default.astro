---
const navItem = [
	{
		title: "Dynage Studio",
		href: "/dynage-studio",
	},
	{
		title: "Dynage Engineering",
		href: "/dynage-engineering",
	},
];
interface Props {
	title: string;
}

const { title } = Astro.props;

const LogoUrl = "https://res.cloudinary.com/dk0pompea/image/upload/v1726647986/dynage/Team_Parent_Company_Color_Black_xlvvzq.png"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Dynage description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="">
		<header class="flex w-full justify-between px-4 py-2 items-center bg-gray-300">
			<a class="h-" href="/" rel="home">
				<img class="overflow-hidden w-32" src={LogoUrl} alt="Dynage Logo">
				</a
			>
			<nav>
				<ul class="flex gap-3">
					{
						navItem.map((item) => (
							<li >
								<a  class="flex items-center" href={item.href}>
								<span>{item.title}</span>
									<span>
										<svg
											width="16"
											height="16"
											viewBox="0 0 16 16"
											fill="none"
											xmlns="http://www.w3.org/2000/svg"
										>
											<path
												d="M5 15L15 5M15 5H9M15 5V11"
												stroke="currentColor"
												stroke-width="2"
											/>
										</svg>
									</span>
								</a>
							</li>
						))
					}
				</ul>
			</nav>
		</header>
		<slot />
	</body>
	<footer class="flex gap-2 items-center bg-gray-100 justify-center py-4 px-3 text-sm my-10">
		<p>&copy; {new Date().getFullYear()} Dynage Technologies</p>


			<p>
				Sitemap
			</p>
			<p> Privacy Policy</p>
	</footer>
</html>
